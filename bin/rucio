import sys

from rucio.client.bin.rucio import main
from rucio.client.commands.commands import main as command_main

if __name__ == '__main__':
    if len(sys.argv) > 1:
        try:
            arguments = [arg for arg in sys.argv if (arg[0] != '-') or (arg == '-h')]
        except IndexError:
            arguments = [None]
        if not any([argument in ["add", "unset", "remove", "list", "set", None, "ping", "whoami", "-h"] for argument in arguments]):
            main()
        else:
            command_main()
    else:
        command_main()
