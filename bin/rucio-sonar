'''
Sonar is a daemon that tests inactive links.
'''

import signal

from rucio.daemons.sonar.sonar.sonar_v3_dev_daemon import run, stop

if __name__ == "__main__":
    signal.signal(signal.SIGTERM, stop)
    try:
        run()
    except KeyboardInterrupt:
        stop()
